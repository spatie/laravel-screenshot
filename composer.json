{
    "name": "spatie/laravel-screenshot",
    "description": "Take screenshots of web pages in Laravel apps",
    "keywords": [
        "Spatie",
        "laravel",
        "laravel-screenshot"
    ],
    "homepage": "https://github.com/spatie/laravel-screenshot",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^12.0",
        "spatie/laravel-package-tools": "^1.16.1",
        "spatie/temporary-directory": "^2.2.1"
    },
    "suggest": {
        "spatie/browsershot": "Required for the Browsershot driver (^4.0|^5.0)"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.13.7",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.1",
        "phpstan/extension-installer": "^1.3.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/browsershot": "^5.2",
        "spatie/invade": "^2.1",
        "spatie/laravel-ray": "^1.43.4",
        "spatie/pest-expectations": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\LaravelScreenshot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\LaravelScreenshot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\LaravelScreenshot\\ScreenshotServiceProvider"
            ],
            "aliases": {
                "LaravelScreenshot": "Screenshot"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
